{
  "name": "vue-sherpa",
  "version": "0.0.2",
  "description": "Headless tour/onboarding library for Vue 3 with bring-your-own-component design",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./primevue": {
      "types": "./dist/adapters/primevue/index.d.ts",
      "import": "./dist/adapters/primevue/index.js",
      "require": "./dist/adapters/primevue/index.cjs"
    },
    "./headless": {
      "types": "./dist/adapters/headless/index.d.ts",
      "import": "./dist/adapters/headless/index.js",
      "require": "./dist/adapters/headless/index.cjs"
    },
    "./nuxt": {
      "types": "./dist/nuxt.d.ts",
      "import": "./dist/nuxt.js",
      "require": "./dist/nuxt.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "quality": "pnpm typecheck && pnpm lint && pnpm test",
    "prepublishOnly": "pnpm run quality && pnpm run build",
    "release": "tsx scripts/release.ts",
    "release:patch": "tsx scripts/release.ts patch",
    "release:minor": "tsx scripts/release.ts minor",
    "release:major": "tsx scripts/release.ts major"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "peerDependenciesMeta": {
    "primevue": {
      "optional": true
    },
    "@nuxt/kit": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "tsx": "^4.20.6",
    "@nuxt/kit": "^3.20.1",
    "@nuxt/schema": "^3.20.1",
    "@types/node": "^20.17.57",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.13",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.2",
    "happy-dom": "^20.0.10",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.13",
    "vue": "^3.5.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "vue",
    "vue3",
    "tour",
    "onboarding",
    "guide",
    "tutorial",
    "walkthrough",
    "headless",
    "primevue",
    "nuxt",
    "shepherd",
    "intro"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MatthiasRossbach/vue-sherpa"
  },
  "author": "Matthias Rossbach",
  "bugs": {
    "url": "https://github.com/MatthiasRossbach/vue-sherpa/issues"
  },
  "homepage": "https://matthiasrossbach.github.io/vue-sherpa/",
  "publishConfig": {
    "access": "public"
  }
}
